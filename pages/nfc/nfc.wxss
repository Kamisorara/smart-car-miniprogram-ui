.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
}

.header-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
}

.main-content {
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 16rpx 48rpx rgba(0,0,0,0.1);
}

.status-indicator {
  text-align: center;
  margin-bottom: 40rpx;
}

.status-circle {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  border-radius: 50%;
  margin: 0 auto 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.status-circle.active {
  animation: pulse 2s infinite;
  box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.4);
}

.status-icon {
  width: 60rpx;
  height: 60rpx;
}

.status-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.steps-guide {
  margin-bottom: 40rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 16rpx;
  border-left: 6rpx solid #667eea;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background: #667eea;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.step-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 表单区域 */
.form-section {
  margin-bottom: 40rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.input-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.input-wrapper {
  position: relative;
}

.form-input {
  width: 100%;
  height: 88rpx;
  background: #f8f9ff;
  border: 2rpx solid #e8eaff;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input:focus {
  border-color: #667eea;
  background: #fff;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

/* 操作按钮区 */
.action-section {
  text-align: center;
}

.config-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  border-radius: 48rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.config-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.config-btn.disabled {
  background: linear-gradient(135deg, #ccc 0%, #999 100%);
  box-shadow: none;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.spinning {
  animation: spin 1s linear infinite;
}

/* 动画效果 */
@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.4);
  }
  70% {
    box-shadow: 0 0 0 20rpx rgba(102, 126, 234, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(102, 126, 234, 0);
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}




